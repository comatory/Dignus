<% if invitations.any? %>
    <ul>
    <% invitations.each do |invitation| %>
            <%= content_tag(:li, link_to("#{User.find_by(id: invitation.user_id).name} | Sent: #{invitation.updated_at} | Accepted: #{invitation.accepted}", user_path(invitation.user_id))) %>
    <% end %>
    </ul>
<% else %>
    You haven't received any invitations yet.
<% end %>
