<div class="description-wrapper">
    <% if user.description.nil? || user.description.empty? %>
        <em><%= I18n.t :users_no_description %></em>
    <% else %>
        <h3><%= I18n.t :bio %></h3>
        <p>
        <b><%= I18n.t :location %>: </b><%= user.location.place_address if user.location %>
        </p>
        <div class="description">
            <%= user.description %>
        </div>
    <% end %>

    <div class="edit">
        <% if can_edit?(user) %>
            <%= link_to I18n.t(:edit_profile_button), edit_user_path(current_user), class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>
