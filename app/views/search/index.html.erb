<h1>Search</h1>

<%= form_tag do %>
    <%= text_field_tag :query %>
    <%= submit_tag "Search" %>
<% end %>



<% if @results.any? %>
    <table class="table table-hover">

        <% @results.each do |item| %>
            <% item.each do |name, data| %>
                <tr>
                    <td><%= link_to(name, item[name][:link]) %></td>
                    <td><%= item[name][:description] %></td>
                    <td><%= item[name][:role] %></td>
                </tr>
            <% end %>
        <% end %>
    </table>
<% end %>
