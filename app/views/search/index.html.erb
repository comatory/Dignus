<div class="container">

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="search-bar">
                <%= form_tag do %>
                    <%= text_field_tag :query, nil, autocomplete: 'off', class: 'index-search' %>
                    <%= button_tag(type: 'submit', class: 'search') do %>
                        <span class="icon-search icon">
                        </span>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>



    <table class="table table-hover" id="search-table">
        <thead>
        </thead>
            <tbody id="search-table-body">
                <% if @results.any? %>
                        <% @results.each do |item| %>
                            <% item.each do |name, data| %>
                                <tr>
                                    <td><%= link_to(name, item[name][:link]) %></td>
                                    <td><%= item[name][:description] %></td>
                                    <td><%= item[name][:role] %></td>
                                </tr>
                            <% end %>
                        <% end %>
                <% end %>
            </tbody>
    </table>
</div>
