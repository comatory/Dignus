<div class="container">
    <h1>Search</h1>

    <%= form_tag do %>
        <%= text_field_tag :query, nil, autocomplete: 'off' %>
        <%= submit_tag "Search" %>
    <% end %>



    <table class="table table-hover" id="search-table">
        <thead>
        </thead>
            <tbody id="search-table-body">
                <% if @results.any? %>
                        <% @results.each do |item| %>
                            <% item.each do |name, data| %>
                                <tr>
                                    <td><%= link_to(name, item[name][:link]) %></td>
                                    <td><%= item[name][:description] %></td>
                                    <td><%= item[name][:role] %></td>
                                </tr>
                            <% end %>
                        <% end %>
                <% end %>
            </tbody>
    </table>
</div>
