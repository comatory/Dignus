<%= form_tag({controller: "invitations", action: "update"}, method: "patch", class: "invitation") do %>
    <%= submit_tag I18n.t(:reject_button), class: 'btn btn-danger btn-invitation' %>
    <%= hidden_field_tag 'invitation[invitation_id]', invitation_id %>
