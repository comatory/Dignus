<% if user_signed_in? && can_edit?(user) %>
<div id="dashboard">
    <div>

      <!-- nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation"><a href="#me" aria-controls="me" role="tab" data-toggle="tab">Me</a></li>
        <li role="presentation" class="active"><a href="#inbox" aria-controls="inbox" role="tab" data-toggle="tab">Inbox</a></li>
        <li role="presentation"><a href="#outbox" aria-controls="outbox" role="tab" data-toggle="tab">Outbox</a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">

          <div role="tabpanel" class="tab-pane" id="me">
              <h4 class="dashboard-label"><%= I18n.t :dashboard_accepted %><br>
                  <small><%= I18n.t :dashboard_accepted_sub %></small>
              </h4>
                <%= render "dashboard/invitation_table", from: true, th_text: I18n.t(:dashboard_th_from), invitations: admin_data[:accepted], buttons: false %>
                <h4 class="dashboard-label"><%= I18n.t :dashboard_rejected_cancelled %><br>
                    <small><%= I18n.t :dashboard_rejected_cancelled_sub %></small>
                </h4>
                    <%= render "dashboard/invitation_table", from: true, th_text: I18n.t(:dashboard_th_from), invitations: admin_data[:cancelled], buttons: false %>
          </div>

          <div role="tabpanel" class="tab-pane active" id="inbox">
              <h4 class="dashboard-label"><%= I18n.t :dashboard_invitations %><br>
                  <small><%= I18n.t :dashboard_invitations_sub %></small>
              </h4>
                <%= render "dashboard/invitation_table", from: true, th_text: I18n.t(:dashboard_th_from), invitations: admin_data[:inbox], buttons: true %>
                <h4 class="dashboard-label"><%= I18n.t :dashboard_invitations_confirmed %><br>
                    <small><%= I18n.t :dashboard_invitations_confirmed_sub %></small>
                </h4>
                <%= render "dashboard/invitation_table", from: false, th_text: I18n.t(:dashboard_th_from), invitations: admin_data[:confirmed], buttons: false%>
          </div>

          <div role="tabpanel" class="tab-pane" id="outbox">
              <h4 class="dashboard-label"> <%= I18n.t :dashboard_outbox %><br>
                  <small><%= I18n.t :dashboard_outbox_sub %></small>
              </h4>
            <%= render "dashboard/invitation_table", from: false, th_text: I18n.t(:dashboard_th_to),  invitations: admin_data[:outbox], buttons: false %>
            <h4 class="dashboard-label"><%= I18n.t :dashboard_turned_down %><br>
                <small><%= I18n.t :dashboard_turned_down_sub %></small>
            </h4>
            <%= render "dashboard/invitation_table", from: false, th_text: I18n.t(:dashboard_th_to), invitations: admin_data[:turned_down], buttons: false%>
          </div>

      </div>

    </div> 
</div>
<% end %>
