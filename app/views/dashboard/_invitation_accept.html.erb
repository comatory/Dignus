<%= form_tag({controller: "invitations", action: "update"}, method: "patch", class: "invitations") do %>
    <%= submit_tag I18n.t(:accept_button), class: 'btn btn-primary btn-invitation' %>
    <%= hidden_field_tag 'invitation[invitation_id]', invitation_id %>
    <%= hidden_field_tag 'invitation[accept]', true %>
<% end %>
