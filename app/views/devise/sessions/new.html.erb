<div class="row">
    <div class="container">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="centered-wrapper">
                <h2><%= I18n.t :sign_in %></h2>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.label I18n.t(:email) %><br />
                    <%= f.email_field :email, autofocus: true %>
                  </div>

                  <div class="field">
                    <%= f.label I18n.t(:password) %><br />
                    <%= f.password_field :password, autocomplete: "off" %>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label I18n.t(:remember_me) %>
                    </div>
                  <% end -%>

                  <br>
                  
                  <div class="actions">
                    <%= f.submit I18n.t(:sign_in), class: 'btn btn-primary' %>
                  </div>

                  <br>
                  
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>
