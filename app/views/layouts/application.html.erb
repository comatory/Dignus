<!DOCTYPE html>
<html>
<head>
  <title>Dignus</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "shared/navbar" %>
<div class="container">
<%= flash_messages %>

<%= yield %>

<% if Rails.env.development? %>
    <div style="background-color: #eee; padding: 5px; margin: 20px; word-wrap: break-word;"><%= params %>
    <p>Current user:<%= current_user.id if user_signed_in? %></p>
</div>
<% end %>

</div>
</body>
</html>
