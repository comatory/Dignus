<div class="container">
    <h1>Edit contents</h1>

    <%= form_tag({controller: "contents", action: "update"}, multipart: true) do %>
        <h3>Website</h3>
        <%= text_field_tag 'contents[website]', @website %>
        <h3>Youtube</h3>
        <%= text_field_tag 'contents[youtube]', @youtube %>
        <% if @audio.length < 5 %>
            <h3>Upload new track</h3>
            <%= file_field_tag 'contents[audio_file]' %>
        <% end %>
        <%= submit_tag "Save", class: 'btn btn-primary' %> 
    <% end %>

    <% if @audio.any? %>
        <h3>Tracks</h3>
        <% @audio.each do |track| %>
            <p><%= track.audio_file_name %></p>
            <%= form_tag({controller: "contents", action: "destroy"}, method: 'delete') do %>
                <%= hidden_field_tag 'contents[delete_audio]', track.id %>
                <%= submit_tag "Delete", class: 'btn btn-danger' %>
            <% end %>
        <% end %>
    <% end %>
</div>
